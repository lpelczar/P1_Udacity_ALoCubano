<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="contactTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/basic</item>
        <item name="android:paddingLeft">@dimen/basic</item>
        <item name="android:textSize">@dimen/basicTextSize</item>
    </style>

    <style name="descriptionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/basicTextSize</item>
    </style>

    <style name="image">
        <item name="android:contentDescription">@string/imageDescription</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">6</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/title</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/titleText</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
